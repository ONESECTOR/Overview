<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.sector.overview.ui.start.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_hostFragment"
            app:destination="@id/hostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_startFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/hostFragment"
        android:name="com.sector.overview.ui.host.HostFragment"
        android:label="fragment_host"
        tools:layout="@layout/fragment_host" />
    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.sector.overview.ui.list.MoviesListFragment"
        android:label="fragment_movies_list"
        tools:layout="@layout/fragment_movies_list" />
    <action android:id="@+id/action_global_moviesListFragment" app:destination="@id/moviesListFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sector.overview.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_hostFragment"
            app:destination="@id/hostFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.sector.overview.ui.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboardingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_onboardingFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_onboardingFragment_to_hostFragment"
            app:destination="@id/hostFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.sector.overview.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_hostFragment"
            app:destination="@id/hostFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.sector.overview.ui.moviedetail.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movie"
            app:argType="com.sector.domain.entity.kinopoisk.Movie" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.sector.overview.ui.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" /><action android:id="@+id/action_global_aboutFragment" app:destination="@id/aboutFragment"/>
    <action
        android:id="@+id/action_global_onboardingFragment"
        app:destination="@id/onboardingFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />
    <action android:id="@+id/action_global_movieDetailFragment" app:destination="@id/movieDetailFragment" />
    <fragment
        android:id="@+id/reviewDetailFragment"
        android:name="com.sector.overview.ui.reviews.detail.ReviewDetailFragment"
        android:label="fragment_review_detail"
        tools:layout="@layout/fragment_review_detail" >
        <argument
            android:name="review"
            app:argType="com.sector.domain.entity.firebase.Review" />
    </fragment>
    <fragment
        android:id="@+id/startReviewFragment"
        android:name="com.sector.overview.ui.reviews.start.StartReviewFragment"
        android:label="fragment_start_review"
        tools:layout="@layout/fragment_start_review" >
        <argument
            android:name="movie"
            app:argType="com.sector.domain.entity.kinopoisk.Movie" />
    </fragment>
    <action android:id="@+id/action_global_reviewDetailFragment" app:destination="@id/reviewDetailFragment" />
    <action android:id="@+id/action_global_startReviewFragment" app:destination="@id/startReviewFragment" /><action android:id="@+id/action_global_loginFragment" app:destination="@id/loginFragment"/>
</navigation>