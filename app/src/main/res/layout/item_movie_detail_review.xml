<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_color"
        android:paddingHorizontal="14dp"
        android:paddingVertical="19dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_short_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:ellipsize="end"
            android:fontFamily="@font/tt_norms_pro_medium"
            android:maxLines="1"
            android:textColor="@color/white_f2"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/tv_rating_percent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Фильм прикольный, но это не то, что я ждал" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="32dp"
            android:ellipsize="end"
            android:fontFamily="@font/tt_norms_pro_light"
            android:maxLines="1"
            android:textColor="@color/gray_80"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/tv_rating_percent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_short_description"
            tools:text="Фильм прикольный, но это не то, что я ждал fhdsjhfjhdsjfhjkdhsfdjnsfnjds" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rating_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tt_norms_pro_bold"
            android:textColor="@color/gray_80"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tv_rating_word"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="79%" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_rating_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tt_norms_pro_light"
            android:text="@string/movie_detail_rating"
            android:textColor="@color/gray_80"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_rating_percent"
            app:layout_constraintStart_toStartOf="@id/tv_rating_percent"
            app:layout_constraintTop_toBottomOf="@id/tv_rating_percent"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>