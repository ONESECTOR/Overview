<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="328dp"
    android:layout_height="520dp"
    android:background="@drawable/bg_white_8"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_course_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:text="Спасибо за оценку!"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textColor="#F2F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/tt_norms_pro_regular"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#F2F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_completed"
        tools:text="Ваш отзыв поможет другим пользователям выбрать фильмы для просмотра." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_back_to_movie"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/tt_norms_pro_medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="-0.01"
        android:text="Вернуться к фильму"
        android:textAllCaps="false"
        android:textColor="@color/purple_background"
        android:textSize="16sp"
        app:backgroundTint="@color/purple_main"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

</androidx.constraintlayout.widget.ConstraintLayout>