<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/purple_background"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_greetings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/tt_norms_pro_medium"
            android:textColor="@color/gray_80"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Доброе утро,\nВсеволод Сокур" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/profile_icon"
            app:layout_constraintBottom_toBottomOf="@id/tv_greetings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_greetings"
            tools:ignore="ContentDescription" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="34dp"
            android:backgroundTint="@color/card_color"
            android:drawableLeft="@drawable/ic_search"
            android:ellipsize="end"
            android:fontFamily="@font/tt_norms_pro_regular"
            android:gravity="start|center_vertical"
            android:letterSpacing="-0.02"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:stateListAnimator="@null"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/darker_gray"
            android:textSize="12sp"
            app:cornerRadius="14dp"
            app:iconPadding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_greetings"
            tools:ignore="RtlHardcoded" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_category_best"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/tt_norms_pro_medium"
            android:padding="4dp"
            android:text="@string/home_category_best"
            android:textColor="@color/white_f2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/tv_category_best_action"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_input_field" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_category_best_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/tt_norms_pro_regular"
            android:padding="4dp"
            android:text="@string/home_category_action_all"
            android:textColor="@color/purple_main"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_category_best"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_category_best" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:paddingHorizontal="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_category_best"
            app:spanCount="2"
            tools:itemCount="8"
            tools:listitem="@layout/item_home_movie" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_category_popular_reviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/tt_norms_pro_medium"
            android:padding="4dp"
            android:text="@string/home_category_popular_reviews"
            android:textColor="@color/white_f2"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_movies" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_category_popular_reviews"
            app:spanCount="2"
            tools:itemCount="8"
            tools:listitem="@layout/item_home_review" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/circleIndicator"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vp_reviews"
            app:tabBackground="@drawable/circle_indicator_tab_layout"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="11dp"
            app:tabPaddingStart="11dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>