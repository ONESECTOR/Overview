<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/purple_background"
    tools:theme="@style/Theme.MaterialComponents">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTintMode="src_in"
        app:indicatorColor="@color/purple_main"
        app:indicatorSize="34dp"
        app:trackColor="@color/gray_80"
        app:trackCornerRadius="3dp"
        app:trackThickness="3dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="54dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="54dp"
        android:fontFamily="@font/tt_hoves_regular"
        android:gravity="center"
        android:text="@string/please_wait"
        android:textAlignment="center"
        android:textColor="@color/darker_gray" />

</LinearLayout>